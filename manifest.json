{
    "manifest_version": 2,
    "name": "CanardPC true ignore",
    "description": "Simple Chrome extension that completely removes forum posts that are ignored on the CanardPC forums.",
    "version": "1.0",
    "browser_action": {
        "default_icon": "emo.png"
    },
    "content_scripts": [
        {
            "matches": ["http://forum.canardpc.com/*"],
            "css": ["cpc-ignore.css"]
        }
    ],
    "permissions": [
        "http://forum.canardpc.com/"
    ]
}
